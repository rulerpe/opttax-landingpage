          <li>Accounts payable/receivable</li>
          <li>Payroll processing</li>
        </ul>
      </div>

      <div class="service-card">
        <div class="service-icon">
          <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="15" y="20" width="30" height="25" stroke="var(--color-sage)" stroke-width="2" fill="none" rx="2"/>
            <line x1="20" y1="15" x2="20" y2="20" stroke="var(--color-sage)" stroke-width="2"/>
            <line x1="30" y1="10" x2="30" y2="20" stroke="var(--color-sage)" stroke-width="2"/>
            <line x1="40" y1="15" x2="40" y2="20" stroke="var(--color-sage)" stroke-width="2"/>
